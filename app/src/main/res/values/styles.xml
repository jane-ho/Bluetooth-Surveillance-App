<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="buttonStyle">@style/MyButtonTheme</item>
        <item name="android:windowBackground">@color/activityBackground</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:itemBackground">@color/colorPrimary</item>
        <item name="imageButtonStyle">@style/MyImageButtonTheme</item>
    </style>

    <style name="MyButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyImageButtonTheme" parent="Widget.AppCompat.ImageButton">
        <item name="backgroundTint">@color/white</item>
    </style>

</resources>
